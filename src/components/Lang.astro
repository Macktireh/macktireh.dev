---
import LangLink from "@src/components/LangLink.astro";

const { lang } = Astro.props;
---

<div class="lang-links">
  <LangLink language="fr" isActive={lang == "fr"}
    ><img src="/images/fr.png" width="18" height="18" /></LangLink
  >
  <span>/</span>
  <LangLink language="en" isActive={lang == "en"}
    ><img src="/images/en.png" width="18" height="18" /></LangLink
  >
  <!-- <LangLink language="fr" isActive={lang == "fr"} /> -->
</div>

<style>
  .lang-links {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5em;
    padding: 0.5em;
    background: rgba(var(--background-200), 0.8);
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(var(--gray-100), 0.6) ;
    position: fixed;
    bottom: 1rem;
    right: 1rem;
    font-size: calc(11px + 0.390625vw);
    border: 1px solid rgba(var(--gray-300), 0.6);
    -webkit-backdrop-filter: blur(5px);
    backdrop-filter: blur(5px);
  }
  .lang-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.1em 0.3em !important;
    color: rgba(var(--text-950), 1);
    border: 1px solid transparent;
    text-decoration: none;
    border-radius: 4px;
  }
  .lang-links a.active {
    text-decoration: none;
    background-color: rgba(var(--gray-500), 0.6);
    font-size: calc(11px + 0.390625vw);
  }
</style>
