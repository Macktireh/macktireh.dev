---
import Icon from "@src/components/Icon.astro";
import { SITE } from "@src/consts";
---

<div class="social-links">
  <a href={SITE.githubUrl} target="_blank" aria-label="Check out my GitHub profile">
    <Icon name="github" size={24} />
  </a>
  <a href={SITE.linkedinUrl} target="_blank" aria-label="Check out my LinkedIn profile">
    <Icon name="linkedin" size={24} />
  </a>
  <a href={SITE.twitterUrl} target="_blank" aria-label="Check out my Twitter profile">
    <Icon name="twitter" size={24} />
  </a>
</div>
