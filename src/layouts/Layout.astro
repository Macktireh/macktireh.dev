---
import type { CollectionEntry } from "astro:content";
import BaseHead from "@src/components/BaseHead.astro";
import Header from "@src/components/Header.astro";
import Footer from "@src/components/Footer.astro";
import {
  getLangFromUrl,
  useTranslations,
  type LangType,
} from "@src/i18n/utils";
import { ViewTransitions } from "astro:transitions";
import { SITE } from "@src/consts";

type Props = Omit<
  CollectionEntry<"posts">["data"],
  "pubDate" | "tags" | "author" | "giscusTitleDiscussionsMapping"
> & {
  slug?: string;
  author?: string;
  pubDate?: Date;
  ogImage?: string;
  hasRedirect?: boolean;
};

const {
  title,
  description,
  author = SITE.author,
  ogImage,
  hasRedirect,
} = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang as LangType);

const metadata = {
  title,
  description,
  author,
  ogImage,
  lang,
};
---

<!doctype html>
<html lang={lang} data-theme={SITE.defaultTheme}>
  <head>
    <script is:inline>
      if (localStorage.getItem("theme") === "light") {
        document.querySelector("html")?.setAttribute("data-theme", "light");
      } else {
        document.querySelector("html")?.setAttribute("data-theme", "dark");
      }
    </script>
    <BaseHead metadata={metadata} hasRedirect={hasRedirect} />
    <ViewTransitions />
  </head>
  <body>
    <slot name="lang-selector" />
    <Header title={t("site.title")} lang={lang} />
    <slot />
    <Footer />
  </body>
</html>
